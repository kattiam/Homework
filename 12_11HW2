//Напишите программу, которая подсчитывает, сколько раз в строке встретился символ ‘w’.
//ДОМАШНЯЯ РАБОТА 31.10

#include <cstdlib>
#include <iostream>

using namespace std;


int main(int argc, char *argv[])
{
    int cnt = 0;
    char a[500];
    cout << "Enter your string ";
    gets(a);
    for (int i = 0; a[i]; i++) 
      if (a[i] == 'w') cnt++;
    cout << cnt << "\n";
    system("PAUSE");
    return EXIT_SUCCESS;
}
